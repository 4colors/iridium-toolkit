<?xml version="1.0"?>
<block>
  <name>burst_downmix</name>
  <key>iridium_toolkit_burst_downmix</key>
  <category>iridium_toolkit</category>
  <import>import iridium_toolkit</import>
  <make>iridium_toolkit.burst_downmix($sample_rate, $search_depth, $input_taps, $start_finder_taps)</make>

  <param>
    <name>Sample Rate</name>
    <key>sample_rate</key>
    <type>int</type>
  </param>

  <param>
    <name>Search Depth</name>
    <key>search_depth</key>
    <type>int</type>
  </param>

  <param>
    <name>Input Taps</name>
    <key>input_taps</key>
    <type>real_vector</type>
  </param>

  <param>
    <name>Start Finder Taps</name>
    <key>start_finder_taps</key>
    <type>real_vector</type>
  </param>


  <sink>
    <name>cpdus</name>
    <type>message</type>
  </sink>

  <source>
    <name>cpdus</name>
    <type>message</type>
  </source>
</block>
